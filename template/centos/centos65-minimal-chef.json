{
  "variables": {
    "provisioner": "chef",
    "provisioner_version": "latest",
    "provisioner_set_path": "true",
    "iso_url": "http://centos.ufms.br/6.5/isos/x86_64/CentOS-6.5-x86_64-netinstall.iso",
    "iso_checksum": "3a9662cb65f9d59677d76acfdb73289da43b4599"
  },
  "builders": [{
    "vm_name": "centos65",
    "type": "vmware-iso",
    "guest_os_type": "centos-64",
    "http_directory": "http",
    "iso_url": "{{ user `iso_url` }}",
    "iso_checksum": "{{ user `iso_checksum` }}",
    "iso_checksum_type": "sha1",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "10000s",
    "tools_upload_flavor": "linux",
    "boot_command": [
      "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks6-netinst.cfg<enter>"
    ],
    "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
    "disk_size": 10140,
    "vmx_data": {
      "memsize": "512",
      "numvcpus": "1",
      "cpuid.coresPerSocket": "1"
    }
  },
  {
    "vm_name": "centos65",
    "type": "virtualbox-iso",
    "http_directory": "http",
    "iso_url": "{{ user `iso_url` }}",
    "iso_checksum": "{{ user `iso_checksum` }}",
    "iso_checksum_type": "sha1",
    "guest_os_type": "RedHat_64",
    "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
    "virtualbox_version_file": ".vbox_version",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "10000s",
    "boot_command": [
      "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks6-netinst.cfg<enter>"
    ],
    "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
    "disk_size": 10140,
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "512"],
      ["modifyvm", "{{.Name}}", "--cpus", "1"]
    ]
  }],
  "provisioners": [{
    "type": "shell",
    "environment_vars": [
      "PROVISIONER={{user `provisioner`}}",
      "PROVISIONER_VERSION={{user `provisioner_version`}}",
      "PROVISIONER_SET_PATH={{user `provisioner_set_path`}}"
    ],
    "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
    "scripts": [
      "script/fix-slow-dns.sh",
      "script/sshd.sh",
      "script/vagrant.sh",
      "script/vmtools.sh",
      "script/provisioner.sh",
      "script/cleanup.sh",
      "script/zerodisk.sh"
    ]}, {
    "type": "chef-solo",
    "cookbook_paths": [ "/Users/marcio/chef-repo/cookbooks" ],
    "run_list": [
      "yum",
      "yum-epel",
      "selinux::permissive",
      "postgresql",
      "git"
    ],
    "json": {"postgresql": { "version": "9.3", "enable_pgdg_apt" : "true" }}
  }],
  "post-processors": [{
    "type": "vagrant",
    "keep_input_artifact": false,
    "output": "../../{{.Provider}}/centos65-{{user `provisioner`}}{{user `provisioner_version`}}.box"
  }]
}
